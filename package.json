{
  "name": "invoicing-system",
  "version": "1.0.0",
  "description": "Invoicing System - Mac and Windows desktop app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --watch preload.js --watch index.html --watch renderer.js --watch lib --watch styles.css --ignore config/ --ext js,json,html,css --exec \"electron .\"",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:intel": "electron-builder --mac --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./assets/icon",
        "name": "Invoicing System"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "invoicing-system"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        }
      ]
    }
  },
  "keywords": [],
  "author": "Eiad Oraby",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "^33.4.11",
    "electron-builder": "^26.7.0",
    "nodemon": "^3.1.11"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "pdf-lib": "^1.17.1"
  },
  "build": {
    "appId": "com.eiadoraby.invoicing-system",
    "productName": "Invoicing System",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.business"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "files": [
      "**/*",
      "!config/config.json",
      "!config/palette.json",
      "!dist",
      "!dist/**",
      "!out",
      "!out/**",
      "!dist.0111",
      "!dist.0111/**",
      "!distjhbkjhb",
      "!distjhbkjhb/**",
      "!main-export1",
      "!main-export1/**",
      "!hhhhh",
      "!hhhhh/**",
      "!**/mac-universal/**",
      "!**/*.dmg",
      "!**/*.zip",
      "!**/*.blockmap",
      "!.git",
      "!.git/**"
    ]
  }
}